<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.vtc.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name.vtc"
            class="org.vtc.perspective.Perspective"
            id="org.vtc.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.vtc.application"
            name="VisualToolComposer">
         <property
               name="appName"
               value="VisualToolComposer">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.vtc.perspective.view.ComponentExplorer"
            icon="icons/gear_in.png"
            id="org.vtc.perspective.view.ComponentExplorer"
            name="%view.name.componentExplorer"
            restorable="true">
      </view>
      <view
            class="org.vtc.perspective.view.Console"
            icon="icons/monitor.png"
            id="org.vtc.perspective.view.Console"
            name="%view.name.console"
            restorable="true">
      </view>
      <view
            class="org.vtc.perspective.view.ProjectExplorer"
            icon="icons/folders_explorer.png"
            id="org.vtc.perspective.view.ProjectExplorer"
            name="%view.name.projectExplorer"
            restorable="true">
      </view>
      <view
            class="org.vtc.perspective.view.PropertyEditor"
            icon="icons/table_edit.png"
            id="org.vtc.perspective.view.PropertyEditor"
            name="%view.name.propertyEditor"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.vtc.ui.commands.exit"
            name="%org.vtc.ui.commands.exit">
      </command>
      <command
            id="org.vtc.ui.toolbar.save"
            name="%org.vtc.ui.toolbar.save">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.vtc.ui.commands.fileMenu"
               label="%org.vtc.ui.commands.fileMenu">
            <command
                  commandId="org.vtc.ui.commands.exit"
                  label="%org.vtc.ui.commands.exit"
                  style="push">
            </command>
         </menu>
         <menu
               id="org.vtc.ui.commands.editMenu"
               label="%org.vtc.ui.commands.editMenu">
            <command
                  commandId="org.vtc.ui.commands.exit"
                  label="%org.vtc.ui.commands.exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.vtc.ui.toolbar"
               label="%org.vtc.ui.toolbar">
            <command
                  commandId="org.vtc.ui.toolbar.save"
                  icon="icons/disk.png"
                  label="%org.vtc.ui.toolbar.save"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
